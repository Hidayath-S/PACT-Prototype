{
    "provider": {
        "name": "getCountryDetailsByISO2CodeService"
    },
    "consumer": {
        "name": "getCountryDetailsByISO2CodeConsumerB"
    },
    "interactions": [
        {
            "description": "A request for countryDetails with ISO2Code=IN",
            "request": {
                "method": "GET",
                "path": "/country/get/iso2code/IN"
            },
            "response": {
                "status": 200,
                "headers": {
                    "Content-Type": "application/json"
                },
                "body": {
                    "RestResponse": {
                        "result": {
                            "name": "India",
                            "alpha3_code": "IND",
                            "alpha2_code": "IN"
                        },
                        "messages": [
                            "Country found matching code [IND]."
                        ]
                    }
                },
                "matchingRules": {
                    "body": {
                        "$.RestResponse.messages[0]": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.RestResponse.result.name": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.RestResponse.result.alpha2_code": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.RestResponse.result.alpha3_code": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        }
                    }
                }
            },
            "providerStates": [
                {
                    "name": "There is a country with ISO2Code=IN"
                }
            ]
        }
    ],
    "metadata": {
        "pact-specification": {
            "version": "3.0.0"
        },
        "pact-jvm": {
            "version": "3.5.10"
        }
    }
}